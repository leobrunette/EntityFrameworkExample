@model IEnumerable<EntityFrameworkExample.Models.Barrel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h1>All Barrels</h1>
        </div>
        <div class="col-sm-1">
            <p>
                @Html.ActionLink("Create", "Add")
            </p>
        </div>
        <div class="col-sm-4">
            <!-- SEARCH -->
        </div>
        <div class="col-sm-1">
            <img src="~/Images/barrelLogo.png" width="60" height="60"/>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Radius
                    </th>
                    <th>
                        Height
                    </th>
                    <th>
                        Contents
                    </th>
                    <th>
                        Current Location
                    </th>
                    <th>
                        Construction Materials
                    </th>
                    <th>
                        Date Created
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Radius)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contents)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConstructionMaterial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | 
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
                    }
            </table>
        </div>
    </div>
</div>
